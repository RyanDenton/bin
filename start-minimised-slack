 
#!/bin/bash
# Launch teams as a background process
slack&
# Loop, waiting for the window to initialise
i=0
while [ $i -lt 20 ]
do
        sleep 0.5
        # check if the window can be found
        window=`wmctrl -l|grep "Slack"`
        if [ "$window" != "" ]
        then
                # Found the window
                for w in $window
                do
                        # Minimise the window
                        xdotool windowminimize $w
                done
                break
        fi
done
